<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
<mapper namespace="com.test.pds.article.service.ArticleMapper">
	<insert id="insertArticle" parameterType="com.test.pds.article.service.Article">
       
		<selectKey resultType="int" keyProperty="articleId" order="AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey>
       
        INSERT INTO article(
            article_title
            ,article_content
        )
        VALUES(
            #{articleTitle}
            ,#{articleContent}
        )      
   
	</insert>  
	
	<insert id="insertArticleFile" parameterType="com.test.pds.article.service.ArticleFile">
       
        INSERT INTO article_file(
        	article_id
        	,article_file_name
        	,article_file_real_name
            ,article_file_ext
            ,article_file_type
            ,article_file_size
        )
        VALUES(
            #{articleId}
            ,#{articleFileName}
            ,#{articleFileRealName}
            ,#{articleFileExt}
            ,#{articleFileType}
            ,#{articleFileSize}
        )      
   
	</insert>  
</mapper>