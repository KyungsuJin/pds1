<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.test.pds.gallery.service.GalleryFileMapper">
	<insert id="addGalleryFile" parameterType="com.test.pds.gallery.service.GalleryFile">
		INSERT INTO gallery_file(
			gallery_file_id
			,gallery_id
			,gallery_file_name
			,gallery_file_real_name
			,gallery_file_ext
			,gallery_file_type
			,gallery_file_size
		)
		VALUES(
			#{galleryFileId}
			,#{galleryId}
			,#{galleryFileName}
			,#{galleryFileRealName}
			,#{galleryFileExt}
			,#{galleryFileType}
			,#{galleryFileSize}
		)
	</insert>
	<select id="selectFileList" parameterType="com.test.pds.gallery.service.Gallery" resultType="hashmap">
				SELECT
			gallery_file_id as galleryFileId
			,gallery_file_name as galleryFileName
			,ROUND(gallery_file_size/1024, 1) as galleryFileSize
		FROM
			gallery_file
		WHERE
			gallery_id=#{galleryId}
	</select>
</mapper>